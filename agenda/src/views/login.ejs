<%- include('includes/head')%>
<%- include('includes/nav')%>

    
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3">
      <h1 class=" text-center">LOGIN</h1>
      <p class="text-center lead">Faça o login ou crie a sua conta</p>

      <%- include('includes/messages'); %>

     <div class="row">

      <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <p>Se ainda não possui uma conta, crie agora!</p>

        <form class="form-cadastro" action="/login/register" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div> <br>
          <button type="submit" class="btn btn-primary">Criar minha conta</button>
        </form>

      </div>

      <div class="col-lg">
        <h4>Entrar no sistema</h4>

        <p>Acessar sua conta</p>

        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div> <br>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>

      </div>

     </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
    